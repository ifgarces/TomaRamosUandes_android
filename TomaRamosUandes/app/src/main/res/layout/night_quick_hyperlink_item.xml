<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp"
    android:backgroundTint="@color/nightCardBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <!-- Image for the web link -->
        <ImageView
            android:id="@+id/quickLinkItem_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/quickLinkItem_text"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="[Link name]"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ubuntu_condensed"
            android:textColor="@color/almostWhite"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/quickLinkItem_image"
            app:layout_constraintStart_toStartOf="@+id/quickLinkItem_image"
            app:layout_constraintTop_toBottomOf="@+id/quickLinkItem_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>