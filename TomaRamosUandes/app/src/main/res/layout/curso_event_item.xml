<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recyclerItems_margin"
    app:cardBackgroundColor="@color/almostWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="3dp"
        android:minWidth="150dp"
        android:maxWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <!-- Date if it is a test/exam, DayOfWeek otherwise -->
        <TextView
            android:id="@+id/cursoEvent_when"
            style="@style/cursoEvent_dateOrDay"
            android:text="[Date | DayOfWeek]"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cursoEvent_when">

            <TextView
                android:id="@+id/cursoEvent_ti"
                style="@style/standardText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="[startTime]"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cursoEvent_when" />

            <TextView
                android:id="@+id/cursoEvent_tStatic"
                style="@style/standardText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text=" - "
                app:layout_constraintStart_toEndOf="@+id/cursoEvent_ti"
                app:layout_constraintTop_toTopOf="@+id/cursoEvent_ti" />

            <TextView
                android:id="@+id/cursoEvent_tf"
                style="@style/standardText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="[endTime]"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cursoEvent_tStatic"
                app:layout_constraintTop_toTopOf="@+id/cursoEvent_ti" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>