<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="6dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <!-- Image for the web link -->
        <ImageView
            android:id="@+id/linkItem_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/linkItem_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="[Link name]"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ubuntu_condensed"
            android:textColor="@color/almostBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/linkItem_image"
            app:layout_constraintStart_toStartOf="@+id/linkItem_image"
            app:layout_constraintTop_toBottomOf="@+id/linkItem_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>