<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/ramoPeek_nombre"
        android:text="[nombre]"
        android:fontFamily="@font/lato"
        android:textAlignment="viewStart"
        android:textColor="@color/almostBlack"
        android:textSize="20sp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ramoAttrs_spacing"
        app:layout_constraintEnd_toStartOf="@+id/ramoPeek_static01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ramoPeek_static01"
        style="@style/ramo_NRC"
        android:paddingEnd="0dp"
        android:text="NRC: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ramoPeek_nombre"
        app:layout_constraintEnd_toStartOf="@+id/ramoPeek_NRC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ramoPeek_NRC"
        style="@style/ramo_NRC"
        android:text="[NRC]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ramoPeek_static01" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ramoAttrs_spacing"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ramoPeek_nombre">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ramoPeek_static02"
                    style="@style/standardTextView"
                    android:text="Profesor: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ramoPeek_profesor"
                    style="@style/standardTextView"
                    android:text="[profesor]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static02"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static02" />

                <TextView
                    android:id="@+id/ramoPeek_static03"
                    style="@style/standardTextView"
                    android:text="Créditos: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static02" />

                <TextView
                    android:id="@+id/ramoPeek_static04"
                    style="@style/standardTextView"
                    android:text="Materia: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static03" />

                <TextView
                    android:id="@+id/ramoPeek_materia"
                    style="@style/standardTextView"
                    android:text="[materia]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static04"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static04" />

                <TextView
                    android:id="@+id/ramoPeek_creditosNum"
                    style="@style/standardTextView"
                    android:text="[créditos]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static03"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static03" />

                <TextView
                    android:id="@+id/ramoPeek_static05"
                    style="@style/standardTextView"
                    android:text="Curso: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static04" />

                <TextView
                    android:id="@+id/ramoPeek_curso"
                    style="@style/standardTextView"
                    android:text="[curso]"
                    android:textAlignment="viewStart"
                    
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static05"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static05" />

                <TextView
                    android:id="@+id/ramoPeek_static06"
                    style="@style/standardTextView"
                    android:text="Sección: "
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static05" />

                <TextView
                    android:id="@+id/ramoPeek_seccion"
                    style="@style/standardTextView"
                    android:text="[secciónNum]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static06"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static06" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ramoPeek_static07"
                    style="@style/standardTextView"
                    android:text="Plan de estudios: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ramoPeek_PE"
                    style="@style/standardTextView"
                    android:text="[PE]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static07"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static07" />

                <TextView
                    android:id="@+id/ramoPeek_static08"
                    style="@style/standardTextView"
                    android:text="Conector liga: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static07" />

                <TextView
                    android:id="@+id/ramoPeek_liga"
                    style="@style/standardTextView"
                    android:text="[liga]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static08"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static08" />

                <TextView
                    android:id="@+id/ramoPeek_static09"
                    style="@style/standardTextView"
                    android:text="Lista cruzada: "

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ramoAttrs_spacing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ramoPeek_static08" />

                <TextView
                    android:id="@+id/ramoPeek_lCruz"
                    style="@style/standardTextView"
                    android:text="[LC]"
                    android:textAlignment="viewStart"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ramoPeek_static09"
                    app:layout_constraintTop_toTopOf="@+id/ramoPeek_static09" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ramoAttrs_spacing">

            <TextView
                android:id="@+id/ramoPeek_static10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:text="Clases: "
                android:textAlignment="gravity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ramoPeek_clasesRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ramo_event_item" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ramoAttrs_spacing">

            <TextView
                android:id="@+id/ramoPeek_static11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:text="Ayudantías: "
                android:textAlignment="gravity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ramoPeek_ayudsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ramo_event_item" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ramoAttrs_spacing">

            <TextView
                android:id="@+id/ramoPeek_static12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:text="Laboratorios: "
                android:textAlignment="gravity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ramoPeek_labsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ramo_event_item" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ramoAttrs_spacing">

            <TextView
                android:id="@+id/ramoPeek_static13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:text="Evaluaciones: "
                android:textAlignment="gravity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ramoPeek_pruebasRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ramo_event_item" />
        </TableRow>
    </TableLayout>

    <!-- Will allow to take the `Ramo` if it is not in the user taken list,
    otherwise will allow to delete (untake) it. -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/ramoPeek_button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="@dimen/floatingButton_elevation"
        android:outlineProvider="none"
        android:textAllCaps="false"
        android:textSize="@dimen/buttonLower_textSize"
        android:text="[delete | take]"
        app:icon="@android:drawable/ic_menu_gallery"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>