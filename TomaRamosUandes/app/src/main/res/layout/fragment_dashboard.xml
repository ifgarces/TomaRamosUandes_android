<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragments.DashboardFragment">

    <!-- Incoming events section (intended for evaluations) -->
    <TextView
        android:id="@+id/dashboard_incomingEventsHeadTxt"
        style="@style/dashboardHeadTextView"
        android:layout_marginTop="0dp"
        android:text="Evaluaciones próximas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_incomingEventsContainer"
        style="@style/dashboardSectionCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_incomingEventsHeadTxt">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dashboard_incomingEventsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/ramoevent_item" />
    </androidx.cardview.widget.CardView>

    <!-- Useful links section -->
    <TextView
        android:id="@+id/dashboard_linksHeadTxt"
        style="@style/dashboardHeadTextView"
        android:text="Links útiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_incomingEventsContainer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_linksContainer"
        style="@style/dashboardSectionCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_linksHeadTxt">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dashboard_linksRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pretty_link_item" />
    </androidx.cardview.widget.CardView>

    <!-- Career advices section -->
    <TextView
        android:id="@+id/dashboard_advicesHeadTxt"
        style="@style/dashboardHeadTextView"
        android:text="Consejos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_linksContainer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_advicesContainer"
        style="@style/dashboardSectionCard"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_advicesHeadTxt">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dashboard_advicesRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pretty_advice_item" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
