<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loadWait_progressBar">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="elevation">11dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="loadWait_background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="elevation">10dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:background">#99FFFFFF</item>
    </style>

    <style name="agendaLandscape_header" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="agendaLandscape_block" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="agendaLandscape_timeBlock" parent="agendaLandscape_block">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="agendaPortrait_header">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="agendaPortrait_cursoName">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="agendaPortrait_time">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/almostBlack</item>
    </style>

    <style name="home_creditsCount">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#513100</item>
    </style>

    <!-- TextView style for `Curso` NRC -->
    <style name="curso_NRC">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:paddingVertical">1dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <!-- style for a small textSize TextView widget (e.g. RecyclerView card item attributes) -->
    <style name="standardTextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="cursoEvent_dateOrDay" parent="standardTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#2A0065</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>