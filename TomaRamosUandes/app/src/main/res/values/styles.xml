<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="agendaLandscape_header" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="agendaLandscape_block" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="agendaLandscape_timeBlock" parent="agendaLandscape_block">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="agendaPortrait_header">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>